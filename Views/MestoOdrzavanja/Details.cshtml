@model FakeCET.Models.MestoOdrzavanja
@{
    ViewBag.Title = "Details";
}

<div class="container">
    <h2>Details - @Model.Naziv</h2>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesto</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">Naziv:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Naziv)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
