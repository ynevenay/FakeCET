@model FakeCET.ViewModels.DodeliPredavacaViewModel

@{
    ViewBag.Title = "Dodeli Predavača";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dodeli Predavača</h2>

@using (Html.BeginForm("DodeliPredavaca", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(model => model.PredavacID, "Predavač", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.PredavacID, new SelectList(Model.Predavaci.Select(p => new { Id = p.PredavacID, ImePrezime = p.Ime + " " + p.Prezime }), "Id", "ImePrezime"), "Izaberite predavača", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PredavacID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.KursID, "Kurs", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.KursID, new SelectList(Model.Kursevi, "KursID", "Naziv"), "Izaberite kurs", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.KursID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Sačuvaj" class="btn btn-primary" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval") // Include jQuery validation scripts if needed
}
