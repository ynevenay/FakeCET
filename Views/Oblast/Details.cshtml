@model FakeCET.Models.Oblast

@{
    ViewBag.Title = "Details";
}

@if (User.IsInRole("Admin") || User.IsInRole("Predavac"))
{
    <div class="container">
        <h2>Dostupne oblasti</h2>

        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Oblast Details</h4>
                <hr />

                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Naziv)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Naziv)
                    </dd>
                </dl>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-sm-10">
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = Model.OblastID }, new { @class = "btn btn-primary" })
                }
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger">
        <strong>Unauthorized:</strong> You do not have permission to view this resource.
    </div>
}
